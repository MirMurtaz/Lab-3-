3.1

a) if (c<7); printf("C is less than 7\n");    
Answer: if (c<7) printf("C is less than 7\n");

b) if (c =>7); printf("C is equal to or less than 7\n");    
Answer: if (c >= 7) printf("C is equal to or less than 7\n");

c) printf(" Remainder of %d divided by %d is \n", x , y , x % y);
Answer: printf("Remainder of %d divided by %d is %d\n", x, y, x % y);

d) num1+num2=ans;
Answer: ans = num1 + num2;

